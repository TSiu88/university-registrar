@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Course

<h2>Course Details</h2>
<hr />
<h3>Course Title: @Html.DisplayFor(model => model.CourseTitle) ( @Html.DisplayFor(model => model.CourseNumber) )</h3>

@if(@Model.Departments.Count == 0)
{
  <p>This course does not have any related departments.</p>
}
else
{
  <h4>Departments related to this course:</h4>
  <ul>
  @foreach(var join in Model.Departments)
  {
    <li>@join.Department.DepartmentTitle</li>
  }
  </ul>
}

@if(@Model.Students.Count == 0)
{
  <p>This course does not have any students enrolled.</p>
}
else
{
  <h4>Students enrolled in this course:</h4>
  <ul>
  @foreach(var join in Model.Students)
  {
    <li>@join.Student.Name</li>
  }
  </ul>
}

<p>@Html.ActionLink("Back to courses", "Index")</p>
<p>@Html.ActionLink("Edit Course", "Edit", new { id = Model.CourseId })</p>
<p>@Html.ActionLink("Delete Course", "Delete", new { id = Model.CourseId })</p>
