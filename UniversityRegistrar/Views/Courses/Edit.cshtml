@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Course

<h2>Edit</h2>

<h4>Edit this course: @Html.DisplayFor(model => model.CourseTitle)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.CourseId)

    @Html.LabelFor(model => model.CourseTitle)
    @Html.EditorFor(model => model.CourseTitle)
    <br>
    <br>
    @Html.LabelFor(model => model.CourseNumber)
    @Html.EditorFor(model => model.CourseNumber)
    <br>
    <br>
    @Html.LabelFor(model => model.Departments)
    @Html.DropDownList("DepartmentId")
    <br>
    <br>
    <input type="submit" value="Save" />
}
<p>@Html.ActionLink("Back to courses", "Index")</p>