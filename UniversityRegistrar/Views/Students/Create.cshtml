@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Student

<h4>Add a new student</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    <br>
    <br>
    @Html.Label("Enrollment Date")
    @Html.TextBoxFor(model => model.EnrollmentDate, new {type = "date"})
    <br>
    <br>
    @Html.LabelFor(model => model.Department)
    @Html.DropDownList("DepartmentId", "Select Major")
    <br>
    <br>
    @Html.Label("Select course")
    @Html.DropDownList("CourseId", "Select Course")

    <input type="submit" value="Add new student" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all students", "Index")</p>