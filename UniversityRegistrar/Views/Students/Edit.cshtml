@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Student

<h2>Edit</h2>

<h4>Edit this student: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.StudentId)

    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)
    <br>
    <br>
    @Html.LabelFor(model => model.EnrollmentDate)
    @Html.EditorFor(model => model.EnrollmentDate, new {type = "date"})
    <br>
    <br>
    @Html.Label("Select major")
    @Html.DropDownList("DepartmentId", "Select Major")
    <br>
    <br>
    @Html.Label("Select course")
    @Html.DropDownList("CourseId", "Select Course")
    <br>
    <br>
    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>